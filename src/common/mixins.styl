//清除浮动
clearFix()
  *zoom 1
  &::after
    content ''
    display block
    clear both

border-1px($color)
  position relative
  &::after
    content ""
    display block
    position absolute
    bottom 0
    left 0
    width 100%
    height 1px
    background $color
    @media screen and (-webkit-device-pixel-ratio:2)
      transform scaleY(.5)
    @media screen and (-webkit-device-pixel-ratio:3)
      transform scaleY(.33333)
